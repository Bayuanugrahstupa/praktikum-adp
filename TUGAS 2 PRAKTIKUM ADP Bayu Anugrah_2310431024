program Restoran;

uses crt;

var
  jenisPesanan, makanan, minuman: integer;
  jumlahMakanan, jumlahMinuman: integer;
  totalHarga: integer;

begin
  clrscr;
  
  writeln('Selamat datang di Restoran Lapau Ganduik');
  writeln('Jenis Pesanan:');
  writeln('1. Makanan');
  writeln('2. Minuman');
  writeln('3. Makanan dan Minuman');
  writeln;
  
  write('Masukkan jenis pesanan (1-3): ');
  readln(jenisPesanan);
  
  clrscr;
  
  case jenisPesanan of
    1: begin
         writeln('Menu Makanan:');
         writeln('1. Sala Lauak');
         writeln('2. Gulai Kapalo Lauak');
         writeln('3. Lamang Tapai');
         writeln;
         
         write('Masukkan nomor makanan yang diinginkan (1-3): ');
         readln(makanan);
         
         case makanan of
           1: begin
                writeln('Pesanan: Sala Lauak');
                write('Jumlah: ');
                readln(jumlahMakanan);
                totalHarga := jumlahMakanan * 10000;
              end;
           2: begin
                writeln('Pesanan: Gulai Kapalo Lauak');
                write('Jumlah: ');
                readln(jumlahMakanan);
                totalHarga := jumlahMakanan * 45000;
              end;
           3: begin
                writeln('Pesanan: Lamang Tapai');
                write('Jumlah: ');
                readln(jumlahMakanan);
                totalHarga := jumlahMakanan * 8000;
              end;
           else
             writeln('Kode Pesanan Tidak Valid');
         end;
       end;
    2: begin
         writeln('Menu Minuman:');
         writeln('1. Teh Manis');
         writeln('2. Jus Jeruk');
         writeln('3. Kopi');
         writeln;
         
         write('Masukkan nomor minuman yang diinginkan (1-3): ');
         readln(minuman);
         
         case minuman of
           1: begin
                writeln('Pesanan: Teh Talua');
                write('Jumlah: ');
                readln(jumlahMinuman);
                totalHarga := jumlahMinuman * 5000;
              end;
           2: begin
                writeln('Pesanan: Es Karambia Mudo');
                write('Jumlah: ');
                readln(jumlahMinuman);
                totalHarga := jumlahMinuman * 8000;
              end;
           3: begin
                writeln('Pesanan: Teh susu');
                write('Jumlah: ');
                readln(jumlahMinuman);
                totalHarga := jumlahMinuman * 10000;
              end;
           else
             writeln('Kode Pesanan Tidak Valid');
         end;
       end;
    3: begin
         writeln('Menu Makanan:');
         writeln('1. Sala Lauak');
         writeln('2. Gulai Kapalo Lauak');
         writeln('3. Lamang Tapai');
         writeln;
         
         write('Masukkan nomor makanan yang diinginkan (1-3): ');
         readln(makanan);
         
         writeln('Menu Minuman:');
         writeln('1. Teh Talua');
         writeln('2. Es Karambia Mudo');
         writeln('3. Teh susu');
         writeln;
         
         write('Masukkan nomor minuman yang diinginkan (1-3): ');
         readln(minuman);
         
         case makanan of
           1: begin
                writeln('Pesanan Makanan: Sala Lauak');
                write('Jumlah Makanan: ');
                readln(jumlahMakanan);
                totalHarga := jumlahMakanan * 10000;
              end;
           2: begin
                writeln('Pesanan Makanan: Gulai Kapalo Lauak');
                write('Jumlah Makanan: ');
                readln(jumlahMakanan);
                totalHarga := jumlahMakanan * 45000;
              end;
           3: begin
                writeln('Pesanan Makanan: Lamang Tapai');
                write('Jumlah Makanan: ');
                readln(jumlahMakanan);
                totalHarga := jumlahMakanan * 8000;
              end;
           else
             writeln('Kode Pesanan Tidak Valid');
         end;
         
         case minuman of
           1: begin
                writeln('Pesanan Minuman: Teh Talua');
                write('Jumlah Minuman: ');
                readln(jumlahMinuman);
                totalHarga := totalHarga + (jumlahMinuman * 5000);
              end;
           2: begin
                writeln('Pesanan Minuman: Es Karambia Mudo');
                write('Jumlah Minuman: ');
                readln(jumlahMinuman);
                totalHarga := totalHarga + (jumlahMinuman * 8000);
              end;
           3: begin
                writeln('Pesanan Minuman: Teh susu');
                write('Jumlah Minuman: ');
                readln(jumlahMinuman);
                totalHarga := totalHarga + (jumlahMinuman * 10000);
              end;
           else
             writeln('Kode Pesanan Tidak Valid');
         end;
       end;
    else
      writeln('Kode Pesanan Tidak Valid');
  end;
  
  writeln;
  writeln('Total Harga: Rp', totalHarga);
  
  readln;
end.          
